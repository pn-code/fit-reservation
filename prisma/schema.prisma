datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model CalorieGoal {
  userId String @id
  goal   Int
}

model Entry {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          Int
  exerciseEntries ExerciseEntry[]
  foodEntries     FoodEntry[]
}

model ExerciseEntry {
  id       Int    @id @default(autoincrement())
  name     String
  duration Int?
  sets     Int?
  reps     Int?
  weight   Float?
  entryId  Int
  entry    Entry  @relation(fields: [entryId], references: [id])

  @@index([entryId])
}

model FoodEntry {
  id       Int    @id @default(autoincrement())
  name     String
  calories Int    @default(0)
  entryId  Int
  entry    Entry  @relation(fields: [entryId], references: [id])

  @@index([entryId])
}

model WeightMeasurement {
  id         Int      @id @default(autoincrement())
  value      Float
  createdAt  DateTime @default(now())
  userId     String
  userUserId String?
}

model BodyFatMeasurement {
  id        Int      @id @default(autoincrement())
  value     Float
  createdAt DateTime @default(now())
  userId    String
}
